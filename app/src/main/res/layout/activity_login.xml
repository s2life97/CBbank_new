<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.account.LoginActivity">
    <ImageView
        android:id="@+id/iv_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/rl_sw"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:padding="5dp"
        android:background="@drawable/bg_switch_checked">
        <androidx.appcompat.widget.SwitchCompat
            android:drawablePadding="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:id="@+id/swNotify"
            android:thumb="@drawable/ic_oval"
            app:trackTint="#00000000"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_language"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vn"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:src="@drawable/icon_logo_login"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_35sdp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/rounded_gradient"
        >

        <EditText
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_toLeftOf="@id/iv_close"
            android:paddingStart="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:paddingEnd="@dimen/_6sdp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/user_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_1sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:layout_centerVertical="true"

            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_close_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/rounded_text"
       >

        <EditText
            android:layout_toLeftOf="@id/iv_eye"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_6sdp"
            android:background="@android:color/transparent"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_eye"
            android:padding="@dimen/_1sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:layout_centerVertical="true"

            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:weightSum="5">
        <Button
            android:id="@+id/bt_login"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/login_button"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/login"/>
        <ImageView
            android:id="@+id/iv_finger_sprint"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_finger"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_forgot_password"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"/>
    </LinearLayout>
</RelativeLayout>
