<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/right_side"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="match_parent"
            android:background="#66ddff00">

            <RelativeLayout
                android:id="@+id/rl_rework"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_gradient_orange"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/ic_rework" />

                <TextView
                    android:id="@+id/tv_rework"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="Phân công lại"
                    android:textColor="#fff" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Nguyễn Văn A"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:button="@drawable/custom_checkbox" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_16sdp"

                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_iden_demo"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_identity"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="0342969050"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_file_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tv_hd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_iden_demo"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="0342969050"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_own"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_iden_demo"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="0342969050"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>