<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.account.ChangePasswordActivity">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <include
        layout="@layout/layout_header" />


    <TextView
        android:id="@+id/tv_tilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/change_pass_intro"
        android:textSize="@dimen/_11sdp" />

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_tilte">
        <LinearLayout
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="@dimen/_8sdp"
               android:layout_marginStart="@dimen/_16sdp"
               android:layout_marginEnd="@dimen/_16sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/blue"
               android:text="Mật khẩu cũ"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:id="@+id/et_pass"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="******************"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:layout_toLeftOf="@id/iv_eye"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye_blue"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/new_pass"/>
        <EditText
            android:paddingBottom="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_13sdp"

            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/verify_new_pass"/>
        <EditText
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_13sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round"
            android:text="@string/change_password"
            android:textAllCaps="false"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/blue"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>