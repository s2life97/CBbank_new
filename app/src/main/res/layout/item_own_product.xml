<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/right_side"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_user_lookup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/square_gradient_blue_ocean"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_user_lookup"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_user_lookup"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_user_lookup" />

                <TextView
                    android:id="@+id/tv_user_lookup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Gán user tra cứu"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rework"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/square_gradient_yellow"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_rework"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_rework"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_rework" />

                <TextView
                    android:id="@+id/tv_rework"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Phân công lại"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_edt"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_pen_person" />

                <TextView
                    android:id="@+id/tv_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/edit_filed"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#CC1818"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_delete"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_garabge" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Xóa"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="@dimen/_4sdp"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <LinearLayout
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_140sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/vayvon_product"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:background="@drawable/rounded_kpi_oceanblue"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="Đạt"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/tv_money"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_money_own"
                        android:drawablePadding="@dimen/_8sdp"

                        android:fontFamily="@font/montserrat_medium"
                        android:text=""
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_interest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_note"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text=""
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_bos_new"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text=""
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_date_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_day_setting"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text=""
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/tv_person_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_person_person"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text=""
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <View
                        android:id="@+id/v_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray" />

                    <View
                        android:id="@+id/v_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray" />

                    <View
                        android:id="@+id/v_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray" />

                    <View
                        android:id="@+id/v_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray" />

                    <View
                        android:id="@+id/v_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:background="#e1e2e6" />
</LinearLayout>