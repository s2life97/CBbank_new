<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/right_side"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_edt"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_pen_person" />

                <TextView
                    android:id="@+id/tv_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/edit_filed"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#CC1818"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_above="@id/tv_delete"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_garabge" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Xóa"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="@dimen/_4sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_meeting"/>

        <LinearLayout
            android:id="@+id/ll_item"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:layout_marginEnd="@dimen/_140sdp"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/blue_meeting"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rounded_kpi_oceanblue"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="Đạt"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tv_product_code"
                    android:drawableStart="@drawable/ic_iemei_new"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_code"
                    android:drawableStart="@drawable/ic_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tv_bos_date"
                    android:drawableStart="@drawable/ic_calendar_new"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_trans_date"
                    android:drawableStart="@drawable/ic_calendar_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tv_date_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_day_setting"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:drawableStart="@drawable/ic_person_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:background="#e1e2e6" />
</LinearLayout>